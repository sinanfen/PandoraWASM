
<MudCard Elevation="0" Square="true" Class="@Class" Style="@Style">
    <MudCardHeader>
        <CardHeaderAvatar>
            <MudAvatar Style="border-radius:50%;">
                <MudImage Src="@ImageUrl" Alt="User Avatar" Style="object-fit: cover; width: 100%; height: 100%; border-radius: 50%;" />
            </MudAvatar>
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText Typo="Typo.body2">@($"{FirstName} {LastName}")</MudText>
            <MudText Typo="Typo.caption">@JobTitle</MudText>
        </CardHeaderContent>
    </MudCardHeader>
</MudCard>

@code {
    [Parameter] public string Class { get; set; }
    [Parameter] public string Style { get; set; }

    [Parameter] public string FirstName { get; set; }
    [Parameter] public string LastName { get; set; }
    [Parameter] public string JobTitle { get; set; }
    [Parameter] public string ImageUrl { get; set; }


}
