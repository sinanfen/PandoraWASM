@using Blazored.LocalStorage
@using Microsoft.AspNetCore.Components.Authorization

<style>
    /* Scoped CSS rule */
    .custom-mud-text-field .mud-input > input.mud-input-root-outlined,
    .custom-mud-text-field div.mud-input-slot.mud-input-root-outlined {
        padding: 11px 14px !important;
    }
</style>
<PersonCard FirstName="@FirstName"
            LastName="@LastName"
            ImageUrl="@ImageUrl"
            JobTitle="@JobTitle"
            Style="background-color: var(--mud-palette-drawer-background);color: var(--mud-palette-drawer-text);" />
<MudDivider DividerType="DividerType.Middle" Class="mb-0" />
<MudNavMenu>
    <MudNavLink Href="/home/dashboard" Match="NavLinkMatch.All" Icon="@Icons.Material.Outlined.Home" IconColor="Color.Info">
        Dashboard
    </MudNavLink>

    <MudNavGroup Title="Vaults" Icon="@Icons.Material.Filled.Security" IconColor="Color.Primary" Expanded="false">
        <MudNavGroup Title="Personal Vaults" Icon="@Icons.Material.Filled.LockOpen" IconColor="Color.Info">
            <MudNavLink Href="/personal-vaults" Icon="@Icons.Material.Filled.Person" IconColor="Color.Info">
                Personal Vaults
            </MudNavLink>
        </MudNavGroup>
        <MudNavGroup Title="Password Vaults" Icon="@Icons.Material.Filled.VpnKey" IconColor="Color.Info">
            <MudNavLink Href="/password-vaults" Icon="@Icons.Material.Filled.Key" IconColor="Color.Info">
                Password Vaults
            </MudNavLink>
        </MudNavGroup>
    </MudNavGroup>

    <MudNavGroup Title="Categories" Icon="@Icons.Material.Filled.Category" IconColor="Color.Primary" Expanded="false">
        <MudNavLink Href="/categories" Icon="@Icons.Material.Filled.Label" IconColor="Color.Info">
            Manage Categories
        </MudNavLink>
    </MudNavGroup>

    <MudNavGroup Title="Settings" Icon="@Icons.Material.Filled.Settings" IconColor="Color.Primary" Expanded="false">
        <MudNavLink Href="/settings/account" Icon="@Icons.Material.Filled.AccountCircle" IconColor="Color.Info">
            Account Settings
        </MudNavLink>
        <MudNavLink Href="/settings/security" Icon="@Icons.Material.Filled.Security" IconColor="Color.Info">
            Security
        </MudNavLink>
    </MudNavGroup>

    <MudNavGroup Title="Help & Support" Icon="@Icons.Material.Filled.Help" IconColor="Color.Primary" Expanded="false">
        <MudNavLink Href="/support/faq" Icon="@Icons.Material.Filled.QuestionAnswer" IconColor="Color.Info">
            FAQ
        </MudNavLink>
        <MudNavLink Href="/support/contact" Icon="@Icons.Material.Filled.ContactSupport" IconColor="Color.Info">
            Contact Support
        </MudNavLink>
    </MudNavGroup>
</MudNavMenu>


