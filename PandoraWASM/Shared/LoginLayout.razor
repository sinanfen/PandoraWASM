@using PandoraWASM.Theme
@inherits LayoutComponentBase


<MudThemeProvider Theme="_currentTheme" />
<MudSnackbarProvider />

<MudContainer MaxWidth="MaxWidth.Small" Class="d-flex align-center" Style="height: 100vh;">
    <div class="d-flex flex-column mud-width-full">
        <MudPaper Elevation="25" Class="pa-8" Width="100%" MaxWidth="500px" Style="@($"border: 2px solid {Colors.Amber.Darken3}; ")">
            <div class="d-flex justify-center">
                <MudImage Fluid ObjectFit="ObjectFit.Cover" Src="/img/pandora.jpg" Alt="PANDORA" Class="rounded-lg" />
            </div>
            @Body
        </MudPaper>
    </div>
</MudContainer>

@code {
    private MudTheme _currentTheme = new PandoraAdminDashboard();
}